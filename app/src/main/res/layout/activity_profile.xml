<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackDark"
    tools:context=".ProfileActivity">

    <Button
            android:text="QR cord"
            android:layout_width="125dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonQr"
            android:background="@drawable/ripple_effect"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.206"
            android:layout_marginTop="35dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"/>
    <Button
            android:text="SAVE"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:background="@drawable/ripple_effect"
            android:id="@+id/butSave" android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonQr"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/buttonQr" app:layout_constraintBottom_toBottomOf="@+id/buttonQr"
            app:layout_constraintHorizontal_bias="0.35" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            android:layout_marginStart="16dp" android:id="@+id/textView2" android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:hint="@string/fullname"
            android:background="@color/colorBlack"
            android:textColorHint="#77FFFFFF"
            app:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
            app:hintTextColor="@color/colorWhite"
            android:id="@+id/textInputLayout" android:layout_marginTop="16dp"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:counterTextColor="@color/colorWhite"
            app:errorEnabled="true"
            app:errorTextColor="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite" android:textSize="30sp"
                android:id="@+id/editName"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:hint="GitHub Account"
            app:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
            app:hintTextColor="@color/colorWhite"
            android:background="@color/colorBlack"
            android:textColorHint="#77FFFFFF"
            app:errorEnabled="true"
            app:errorTextColor="@color/colorAccent"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:counterTextColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            android:id="@+id/textInputLayout2">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite" android:textSize="30sp"
                android:id="@+id/editGit"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:hint="Twitter Account"
            app:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
            app:hintTextColor="@color/colorWhite"
            android:background="@color/colorBlack"
            android:textColorHint="#77FFFFFF"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:counterTextColor="@color/colorWhite"
            app:errorEnabled="true"
            app:errorTextColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
            android:id="@+id/textInputLayout3">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite" android:textSize="30sp"
                android:id="@+id/editTwi"/>
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>