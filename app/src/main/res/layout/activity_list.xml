<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackDark"
        tools:context=".ListActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="550dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/recyclerView"
            app:layout_constraintTop_toBottomOf="@+id/b_selector"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/selector"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/b_selector"
            android:background="#00000000"
            android:tint="@color/colorWhite"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"/>
    <TextView
            android:text="Name"
            android:textColor="@color/colorWhite"
            android:layout_width="100dp"
            android:layout_height="50dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/text_select"
            app:layout_constraintEnd_toStartOf="@+id/b_selector" android:textSize="25sp" android:gravity="center"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>